import datetime

# Запрос даты рождения у пользователя
def get_birthday():
    day = int(input("Введите день рождения: "))
    month = int(input("Введите месяц рождения: "))
    year = int(input("Введите год рождения: "))
    return day, month, year

# Определение дня недели
def get_weekday(day, month, year):
    date = datetime.date(year, month, day)
    return date.strftime("%A")  # Название дня недели

# Проверка високосности
def is_leap_year(year):
    return year % 4 == 0 and (year % 100 != 0 or year % 400 == 0)

# Расчет возраста
def get_age(day, month, year):
    today = datetime.date.today()
    birth_date = datetime.date(year, month, day)
    age = today.year - birth_date.year
    if (today.month, today.day) < (birth_date.month, birth_date.day):
        age -= 1
    return age

# Вывод даты в стиле электронного табло
def display_date_birthday(day, month, year):
    def to_stars(number, length=2):
        return ''.join('*' for _ in range(length))
    day_str = to_stars(day)
    month_str = to_stars(month)
    year_str = ''.join('*' for _ in range(4))
    print(f"{day_str} {month_str} {year_str}")

# Основная программа
def main():
    day, month, year = get_birthday()
    weekday = get_weekday(day, month, year)
    leap = is_leap_year(year)
    age = get_age(day, month, year)

    print(f"День недели: {weekday}")
    print(f"Год {year} {'високосный' if leap else 'не високосный'}")
    print(f"Текущий возраст: {age} лет")
    print("Дата рождения в стиле электронного табло:")
    display_date_birthday(day, month, year)

if __name__ == "__main__":
    main()
